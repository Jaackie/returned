/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
}

.search {
  margin-top: 10px;
  width: 700rpx;
  text-align: center;
  background-color: #fff;
  align-items: center;
  border-radius: 5px;
}

.search input {
  height: 35px;
  font-size: 15px;
  line-height: 35px;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  color: #999;
}

.card-list {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.char {
  width: 750rpx;
  margin: 10px 0;
}

.char .content {
  margin-left: 25rpx;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 12px;
  color: #999;
}

.card {
  width: 100%;
  height: 70px;
  background-color: #fff;
  margin-bottom: 1px;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 70px;
}

.card .avatar {
  margin-left: 25rpx;
  width: 40px;
  height: 40px;
  background-color: #666;
  border-radius: 50%;
}

.card-info {
  width: 250px;
  height: 100%;
  margin-left: 15px;
}

.info-top {
  height: 35px;
  display: flex;
  flex-direction: row;
  margin-top: -10px;
}

.name {
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
}

.sex{
  width: 16px;
  height: 16px;
  margin-left: 8px;
  margin-top: 26px;
}

.info-bot {
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 13px;
  color: #999;
  height: 35px;
  margin-top: -13px;
}

.phone{
  margin-left: 13px;
  width: 26px;
  height: 26px;
  background-color: #F2F2F2;
  border-radius: 50%;
  border:1px solid #CCCCCC;
}


