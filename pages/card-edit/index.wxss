.my {
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
  height: auto;
}

.info {
  width: 100%;
  height: 60px;
  background-color: #666;
}

.info .content {
  width: 100%;
  margin: 20px auto;
  text-align: center;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 12px;
  color: #ccc;
}

.info-group {
  width: 100%;
}

.info-area {
  width: 100%;
  margin: 0 auto;
  background-color: #fff;
}

.info-item {
  width: 680rpx;
  min-height: 52px;
  margin: 0 auto;
  font-weight: 400;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-style: normal;
  font-size: 14px;
  border-bottom: 1px solid #f2f2f2;
  align-items: center;
  text-align: left;
  justify-content: space-between;
}

.info-item .required{
  color: #f00;
}

.info-item .row{
  align-items: center;
}

.info-item:last-child {
  border-bottom: 1px solid #fff;
}

.info-name {
  min-width: 40px; 
  color: #999;
  
}

.info-value {
  margin-left: 20px;
  color: #333;
}

.info-value .avatar{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin: 10px 0;
}

.info-icon{
  width: 16px;
  height: 16px;
  vertical-align: middle;
  -moz-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
  transform: rotate(180deg);
  opacity: 0.4;
}

.btn-more{
  color: #6699CC;
}

.info-group-name {
  width: 680rpx;
  margin: 10px auto;
  color: #999;
  font-size: 12px;
  background-color: #f2f2f2;
}

.other .info-item {
  width: 750rpx;
  height: auto;
  padding: 10px 0;
}

.other .info-value {
  flex-wrap: wrap;
}

.other .img {
  width: 60px;
  height: 60px;
  background-color: #999;
  margin-right: 10px;
  margin-bottom: 10px;
}

.hide{
  display: none;
}
