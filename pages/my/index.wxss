.my {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
}

.info {
  width: 100%;
  height: 126px;
  background-color: #666;
}

.info .content {
  width: 620rpx;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
}

.content .c-left {
  width: 500rpx;
  height: 100%;
  margin-top: 10px;
}

.name {
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 22px;
  color: #fff;
}

.info-line {
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  color: #fff;
  font-size: 14px;
  margin: 11px 0;
}

.info-line .value {
  margin-left: 20px;
}

.content .avatar {
  margin-top: 10px;
  width: 56px;
  height: 56px;
  border-radius: 50%;
}

.options {
  width: 100%;
  justify-content: space-around;
}

.opt {
  width: 156px;
  height: 36px;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 14px;
  margin: 20px 0;
}

.btn-group{
  width: 100%;
  margin-top: 10px;
}

.btn-area{
  width: 100%;
  margin: 0 auto;
  background-color: #fff;
}

.btn{
  width: 650rpx;
  height: 52px;
  margin: 0 auto;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  font-style: normal;
  font-size: 13px;
  color: #333333;
  border-bottom: 1px solid #f2f2f2;
  align-items: center;
  justify-content: space-between;
  text-align: left;
}

.btn:last-child{
  border-bottom: 1px solid #fff;
}


.btn-icon{
  width: 16px;
  height: 16px;
  vertical-align: middle;
  -moz-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
  transform: rotate(180deg);
  opacity: 0.4;
}
