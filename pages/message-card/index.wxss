/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
  justify-content: unset;
}

.card-group {
  width: 100%;
  height: auto;
  margin: 10px 0;
}

.card {
  width: 100%;
  height: 80px;
  background-color: #fff;
  margin-top: 1px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card .avatar {
  width: 50px;
  height: 50px;
  vertical-align: middle;
  margin-left: 15px;
}

.card .info {
  margin-left: 20px;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
}

.info .name {
  font-size: 17px;
  color: #333;
  margin: 5px 0;
}

.info .action {
  font-size: 14px;
  color: #999;
  margin: 5px 0;
}
