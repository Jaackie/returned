/* pages/message-system/index.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
  justify-content: unset;
}

.card-group {
  width: 100%;
  height: auto;
  margin: 10px 0;
}

.card {
  width: 750rpx;
  height: auto;
  background-color: #fff;
  margin-top: 1px;
  display: flex;
  flex-direction: column;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
}

.card .title {
  font-size: 17px;
  color: #333;
  text-align: left;
  margin: 15px 0 10px 15px;
}

.card .content{
  font-size: 14px;
  color: #999;
  text-align: left;
  margin: 0 15px 15px 15px;

}
