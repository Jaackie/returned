/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
  justify-content: unset;
}

.group-name {
  width: 100%;
  height: 32px;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 12px;
  color: #999;
  line-height: 32px;
  text-align: left;
  margin-left: 25px;
}

.setting-group {
  width: 100%;
  height: auto;
}

.item {
  width: 100%;
  height: 44px;
  background-color: #fff;
  justify-content: space-between;
  margin-top: 1px;
  align-items: center;
}

.item .name {
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 15px;
  margin-left: 12px;
}

.item .option{
  margin-right: 5px;
}
