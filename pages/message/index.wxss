/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f2f2;
}

.card-list {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.char {
  width: 750rpx;
  margin: 5px 0;
}

.char .content {
  margin-left: 25rpx;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 12px;
  color: #999;
}

.card {
  width: 100%;
  height: 70px;
  background-color: #fff;
  margin-bottom: 1px;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 70px;
  justify-content: space-between;
}

.avatar {
  width: 40px;
  height: 40px;
  background-color: #666;
  border-radius: 50%;
  margin: 15px 20px;
}

.card-info {
  width: auto;
  height: 100%;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 16px;
}

.num {
  height: 20px;
  min-width: 20px;
  vertical-align: middle;
  border-radius: 10px;
  font-family: 'Arial Normal', 'Arial';
  font-weight: 400;
  font-style: normal;
  font-size: 13px;
  color: #fff;
  text-align: center;
  line-height: 20px;
  background-color: #f30;
  padding: 0 5px;
  margin-right: 20px;
}