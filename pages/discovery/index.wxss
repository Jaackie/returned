/**index.wxss**/

.list {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F2F2F2;
} 

.card{
  width: 100%;
  background-color: #fff;
  margin-bottom: 5px;
}

.content{
  margin: 0 auto;
  width: 700rpx;
}

.title{
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  font-size: 15px;
  margin: 10px 0;
}

.image{
  width: 100%;
  height: 106px;
}

.info{
  font-size: 14px;
  font-family: '微软雅黑 Regular', '微软雅黑';
  font-weight: 400;
  font-style: normal;
  color: #999999;
  margin: 5px 0;
}
